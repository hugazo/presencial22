<p id="notice"><%= notice %></p>


<div class="row">
  <div class="container">
    <h1>Students</h1>
  </div>
  <div class="container">
      <p> <%= link_to 'New Student', new_student_path %> </p>
  </div>
</div>
<div class="row">
  <div class="container">
    <div class="col-md-4">
      <h4>Name</h4>
    </div>
    <div class="col-md-2">
      <h4>Age</h4>
    </div>
    <div class="col-md-offset-6">
    </div>
  </div>
  <div class="container">
    <% @students.each do |student| %>
    <div class="col-md-4">
      <p>
        <%= student.name %>
      </p>
    </div>
    <div class="col-md-2">
      <p>
        <%= student.age %>
      </p>
    </div>
    <div class="col-md-2">
      <button class="btn btn-primary">
        <%= link_to 'Show', student %>
      </button>
    </div>
    <div class="col-md-2">
      <button class="btn btn-warning">
        <%= link_to 'Edit', edit_student_path(student) %>
      </button>
    </div>
    <div class="col-md-2">
      <button class="btn btn-danger">
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
      </button>
    </div>
    <% end %>
  </div>
</div>
